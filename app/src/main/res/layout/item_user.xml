<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_space"
    android:background="@drawable/customborder">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Username"
        android:textSize="@dimen/title_size"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Name"
        android:layout_marginTop="@dimen/default_space"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="id"
        android:layout_marginTop="@dimen/default_space"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:text="@string/address"
        app:layout_constraintTop_toBottomOf="@id/id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/street"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/suite"
        tools:text="id"
        app:layout_constraintTop_toBottomOf="@id/street"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        tools:text="id"
        app:layout_constraintTop_toBottomOf="@id/suite"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zipcode"
        tools:text="id"
        app:layout_constraintTop_toBottomOf="@id/city"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/geo"
       android:text="@string/geo"
        app:layout_constraintTop_toBottomOf="@id/zipcode"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lat"
        tools:text="id"
        app:layout_constraintTop_toBottomOf="@id/geo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lng"
        tools:text="id"
        app:layout_constraintTop_toBottomOf="@id/lat"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        tools:text="id"
        app:layout_constraintTop_toBottomOf="@id/lng"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/website"
        tools:text="id"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company"
        android:text="@string/company"
        app:layout_constraintTop_toBottomOf="@id/website"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/companyName"
        tools:text="id"
        app:layout_constraintTop_toBottomOf="@id/company"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/catchPhrase"
        tools:text="id"
        app:layout_constraintTop_toBottomOf="@id/companyName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bs"
        tools:text="id"
        app:layout_constraintTop_toBottomOf="@id/catchPhrase"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_space"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/default_space"
        app:srcCompat="@android:drawable/arrow_down_float"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>